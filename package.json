{
  "name": "visual-cobol-codeflow",
  "displayName": "Visual COBOL CodeFlow",
  "description": "The extension designed to visualize COBOL program flow",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "visual-cobol-codeflow.generateGraph",
        "title": "Generate Mermaid Graph"
      },
      {
        "command": "visual-cobol-codeflow.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "menus": {
    "editor/context": [
      {
        "command": "visual-cobol-codeflow.generateGraph",
        "when": "editorLangId == plaintext",
        "group": "navigation"
      }
    ]
  },
  "activationEvents": [
    "onCommand:visual-cobol-codeflow.generateGraph",
    "onCommand:visual-cobol-codeflow.helloWorld"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run compile-antlr && webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "compile-antlr": "antlr4ts -visitor -o src/generated/ src/grammar/VisualCobol.g4",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/react": "^19.1.1",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "autoprefixer": "^10.4.21",
    "chai": "^4.3.10",
    "eslint": "^9.13.0",
    "postcss": "^8.5.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "antlr4ts": "^0.5.0-alpha.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "next": "^15.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5"
  }
}
